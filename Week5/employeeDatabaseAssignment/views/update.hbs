{{>nav}}
<div id="main">
    <h1>Update Page:</h1>
    {{#if employee}}
    <form action="/updateEmployeeData" method="post">
        <input type="hidden" name="_id" value="{{employee._id}}">
        <label for="firstName">First Name: </label>
        <input type="text" name="firstName" id="firstName" value="{{employee.firstName}}">
        <br>
        <label for="lastName">Last Name: </label>
        <input type="text" name="lastName" id="lastName" value="{{employee.lastName}}">
        <br>
        <label for="department">Department: </label>
        <select name="department" id="department">
            <option value="HR">HR</option>
            <option value="Finances">Finances
            </option>
            <option value="Front End">Front End
            </option>
            <option value="Back End">Back End
            </option>
        </select>
        <br>
        <label for="startDate">Start Date: </label>
        <input type="date" name="startDate" id="startDate" value="{{employee.startDate}}">
        <br>
        <label for="jobTitle">Job Title: </label>
        <input type="text" name="jobTitle" id="jobTitle" value="{{employee.jobTitle}}">
        <br>
        <label for="salary">Salary: </label>
        <input type="number" name="salary" id="salary" value="{{employee.salary}}">
        <br>
        <button type="submit">Update Employee</button>
    </form>
    {{else}}
    <h2>Please select an employee to update from the read page</h2>
    {{/if}}
</div>